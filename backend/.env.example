# ─── Server ───────────────────────────────────────────────
NODE_ENV=development
PORT=3000

# ─── MySQL ────────────────────────────────────────────────
DB_HOST=localhost
DB_PORT=3306
DB_USER=dashboard_user
DB_PASSWORD=your_db_password
DB_NAME=team_agneto_db
DB_POOL_LIMIT=10

# ─── OpenWeatherMap ───────────────────────────────────────
# Get a free key at: https://openweathermap.org/api
WEATHER_API_KEY=your_openweathermap_api_key
WEATHER_CITY=Dallas
WEATHER_COUNTRY=US
# imperial = °F / mph  |  metric = °C / m/s
WEATHER_UNITS=imperial

# ─── Data Retention (days) ────────────────────────────────
WEATHER_RETAIN_DAYS=7
SYSTEM_STATS_RETAIN_DAYS=3
API_LOG_RETAIN_DAYS=30

# ─── CORS ─────────────────────────────────────────────────
# Comma-separated allowed origins, or * for all (dev)
# Production example: http://192.168.1.50:4200,http://dashboard.local
CORS_ORIGINS=*

# ─── Seating Shuffle ─────────────────────────────────────
SHUFFLE_PASSWORD=your_shuffle_password
